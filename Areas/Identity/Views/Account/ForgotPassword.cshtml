@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Lấy lại mật khẩu?";
    Layout ="_LoginLayout.cshtml";
}
<style>
    .bg-password-image {
        background-image: url("https://img.freepik.com/free-photo/top-view-female-hands-work-computer-blue-background_169016-18179.jpg?w=996&t=st=1666235451~exp=1666236051~hmac=ae44c043e161a40203fea3c551167246562c4ffb52e9b470cc8d5c02bb830862");
        background-position: center;
        background-size: contain;
        background-repeat: no-repeat;
    }
</style>
    <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-2">Quên mật khẩu?</h1>
                                        <p class="mb-4">Hãy nhập email của bạn để lấy lại mật khẩu.</p>
                                    </div>
                                    <form class="user" method="post">
                                        
                                        <div class="form-group">
                                            <input asp-for="Email" class="form-control form-control-user" placeholder="Email"/>
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        
                                         <button type="submit" class="btn btn-primary btn-user btn-block">Gửi</button>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Tạo tài khoản mới</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">Đã có tài khoản? Đăng nhập!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
