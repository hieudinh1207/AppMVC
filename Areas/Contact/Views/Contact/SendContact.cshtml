@model MVC_01.Models.Contacts.Contact

@{
    ViewData["Title"] = "Vạn lần biết ơn sự ủng hộ của bạn";
}

<div class="row">
    <div class="col-md-4">
        <div class="contact-firstcol p-2 h-100">
            <br>
            <h1>@ViewData["Title"]</h1>
            <h4>Có gì chưa tốt mong nhận được góp ý từ bạn !</h4>
            <img src="https://upanh123.com/wp-content/uploads/2021/06/hinh-anh-cam-on3.gif" alt="funny animation GIF"> 
        </div>
    </div>
    <div class="formcontact col-md-8">
        <form asp-action="SendContact">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateSent" class="control-label"></label>
                <input asp-for="DateSent" class="form-control" />
                <span asp-validation-for="DateSent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <textarea rows="5" asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Gửi liên hệ" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
